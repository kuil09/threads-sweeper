{
  "manifest_version": 3,
  "name": "Threads Sweeper",
  "version": "1.0.0",
  "description": "Threads 유해 계정 팔로워 일괄 차단 및 증거 수집 도구",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "downloads"
  ],
  "host_permissions": [
    "https://www.threads.net/*"
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.threads.net/*"],
      "js": ["src/content/content.js"],
      "css": ["src/content/content.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["src/lib/*"],
      "matches": ["https://www.threads.net/*"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
